<div class= 'container'>
  <div class= 'row'>
     <div class='col px-5 py-5'>
      <h4 class="ml-5">配送先編集</h4>
      <div class="form-group">
      <%= form_with model: @address, local: true do |f| %>
      <table class='new_form my-4'>
          <tr>
            <td><%= f.label :postal_code,"郵便番号" %></td>
            <td><%= f.text_field :postal_code, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :address,"住所" %></td>
            <td><%= f.text_area :address %></td>
          </tr>
          <tr>
            <td><%= f.label :name,"宛名"%></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit"変更内容を保存", class: "btn btn-sm btn-success" %></td>
          </tr>
      </table>
      <% end %>
      </div>
    </div>
  </div>
</div>