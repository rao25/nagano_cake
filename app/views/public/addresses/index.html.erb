<h3>配送先登録/一覧</h3>

<%= form_with model: @address, local: true do |f| %>
    <%= f.label :postal_code,"郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
  
    <%= f.label :address,"住所" %>
    <%= f.text_area :address %>
  
    <%= f.label :name,"宛名"%>
    <%= f.text_field :name %>
    
    <%= f.submit"新規登録" %>
    
<% end %>

      <p>郵便番号</p>
      <p>住所</p>
      <p>宛名</p>
      <p></p>
    
    <% @addresses.each do |address| %>
    
      <%= address.postal_code %>
      <%= address.address %>
      <%= address.name %>
      
      <%= link_to "編集する" ,edit_address_path(address.id) %>
      <%= link_to "削除する" ,address_path(address.id) ,method: :delete  %>
        
    <% end %>