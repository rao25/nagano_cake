  <h3>会員情報編集</h3>
  
  <%= form_with model: @customer, url: customers_path(@customer), local: true do |f| %>
      <%= f.label :氏名 %>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.text_field :first_name  %>
  
      <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
  
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code %>
  
      <%= f.label :住所 %>
      <%= f.text_field :address  %>
  
      <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number %>
  
      <%= f.label :メールアドレス %>
      <%= f.email_field :email %>
  
      <%= f.submit "編集内容を保存" %>
      
      <%= link_to "退会する", customers_retention_path %>
      
  <% end %>