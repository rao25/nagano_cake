  <div class="container">
    <div class="row">
      <div class="col-md-8 my-5">
        <h4>会員情報編集</h4>
      </div>
    </div>
    <%= form_with model: @customer, url: customers_path(@customer), local: true do |f| %>
    <div class="row">
      <div class="col-md-10">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :氏名 %></td>
              <td><%= f.text_field :last_name, autofocus: true %></td>
              <td><%= f.text_field :first_name  %></td>
            </tr>
            <tr>
              <td><%= f.label :フリガナ %></td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td><%= f.label :郵便番号 %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :住所 %></td>
              <td><%= f.text_field :address  %></td>
            </tr>
            <tr>
              <td><%= f.label :電話番号 %></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td><%= f.label :メールアドレス %></td>
              <td><%= f.email_field :email %></td>
            </tr>
            <tr>
              <td><%= f.submit "編集内容を保存", class: 'btn btn-success' %></td>
              <td><%= link_to "退会する", customers_retention_path, class: "btn btn-danger" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <% end %>
 </div>
 
 
 
 