<div class="container-fluid">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-8 my-5">
      <h4>マイページ</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 ml-5">
      <h5>登録情報</h5>
      <%= link_to "編集する", edit_customers_path %>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.full_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="row pt-3">
        <h5 class="font-weight-bold col-2 m-0 align-self-center">配送先</h5>
        <div class="col-5"><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary btn-sm" %></div>
      </div>
      <div class="row pt-3">
        <h5 class="font-weight-bold col-2 m-0 align-self-center">注文履歴</h5>
        <div class="col-5"><%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm" %></div>
      </div>
    </div>
  </div>
</div>