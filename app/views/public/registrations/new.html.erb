<div class="container">
  <div class="row">
    <div class="col-md-8 my-5">
      <h4>新規会員登録</h4>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <div class="row">
    <div class="col-md-10">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :名前 %></td>
            <td>
                <em><%= f.label :last_name, "(姓)" %></em></br>
                <%= f.text_field :last_name %>
            </td>
            <td>
                <em><%= f.label :first_name, "(名)" %></em></br>
                <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :フリガナ %></td>
            <td>
                <em><%= f.label :last_name_kana, "(セイ)" %></em></br>
                <%= f.text_field :last_name_kana %>
            </td>
            <td>
                <em><%= f.label :first_name_kana,"(メイ)" %></em></br>
                <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>  
          <tr>
          <div class="field">
            <td><%= f.label :"パスワード" %></td>
            <td><% if @minimum_password_length %>
            　　<em>(<%= @minimum_password_length %> 文字以上)</em>
          　     <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
          　</td>
          </div>
          </tr>
          <tr>
          <div class="field">
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %><br /></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </div>
          </tr>
          <tr>
          <div class="actions">
            <td><%= f.submit "新規登録" %></td>
          </div>
          </tr>
        </tbody>
      </table>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h5>既に会員登録済みの方</h5></br>
      <p><%= link_to "こちら",new_customer_session_path %></u>　からログインしてください。</p>
    </div>
  </div>
</div>
