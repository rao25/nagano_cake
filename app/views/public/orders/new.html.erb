<%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>

<div class="container">
  <div class="row">
    <div class="col-md-12" style="height: 50px;"></div>
  </div>
  <div class="row pb-5">
    <div class="col-md-1"></div>
    <div class="col-md-10"><h3>注文情報入力</h3></div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
      <h5>支払方法</h5>
        <%= f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first, :last %>
      <h5>お届け先</h5>
        <%= f.radio_button :address_option,0 %>
        <%= f.label :address,"ご自身の住所", value: 0, style: "display: inline-block;" %></br>
          
        <%= f.radio_button :address_option,1 %>
        <%= f.label :address,"登録済み住所から選択",value: 1, style: "display: inline-block;" %>
        <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address) %></br>
        
        <%= f.radio_button :address_option,2 %>
        <%= f.label :address,"新規配送先",value: 2, style: "display: inline-block;" %>
    </div>
    <div class="col-md-2"></div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
            <td><%= f.text_field :postal_code, value: @address.postal_code %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :"住所" %></td>
            <td><%= f.text_field :address, value: @address.address %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :"宛名" %></td>
            <td><%= f.text_field :name, value: @address.name %></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "　確認画面へ進む　",class:"btn btn-primary" %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
<% end %>
      
  