<h3>注文情報入力</h3>

<%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>

   <h5>支払方法</h5>
   <%= f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first, :last %>
  
   <h5>お届け先</h5>
          <%= f.radio_button :address_option,0 %>
          <%= f.label :address,"ご自身の住所", value: 0, style: "display: inline-block;" %><br />
          
          <%= f.radio_button :address_option,1 %>
          <%= f.label :address,"登録済み住所から選択",value: 1, style: "display: inline-block;" %><br />
          <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address) %>
        
          <%= f.radio_button :address_option,2 %>
          <%= f.label :address,"新規配送先",value: 2, style: "display: inline-block;" %><br />
          <%= f.label :"郵便番号（ハイフンなし）" %>
          <%= f.text_field :postal_code, value: @address.postal_code %>
          <%= f.label :"住所" %>
          <%= f.text_field :address, value: @address.address %>
          <%= f.label :"宛名" %>
          <%= f.text_field :name, value: @address.name %>
          <%= f.submit "確認登録画面へ進む", class:"btn btn-primary" %>
      
    <% end %>