  <h3>注文履歴一覧</h3>

  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払金額</th>
  <th>ステータス</th>
  <th>注文詳細</th>
   
  <% @orders.each do |order| %>
  <%= order.created_at.strftime("%Y/%m/%d") %>
  〒<%= order.post_code %>
  <%= order.address %>
  <%= order.name %>
        
  <% @order_details.each do |order_detail| %>
  <%= order_detail.item.name %>
  <% end %>
  
  
  <%= order.payment.to_s(:delimited) %>円
  <%= order.status_i18n %>
  <%= link_to "表示する", order_path(order) ,class:"btn btn-dark"%>
  <% end %>
  