<div class="container px-5 py-5">
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-10"><h4>注文履歴詳細</h4></div>
    <div class="col-md-1"></div>
  </div>
  <div class="row">
    <div class="col-md-8"><h4>注文情報</h4>
       <table class="table table-bordered mt-3">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
              〒<%= @order.post_code %>
              <%= @order.address %>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4"><h4>請求情報</h4>
      <table class="table table-bordered mt-3">
        <tr>
          <th>商品合計</th>
          <td><%= (@order.payment - @order.postage).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col"><h4>注文内容</h4>
      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.tax_included_price.to_s(:delimited) %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.sum_of_price.to_s(:delimited) %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

