<div class="container px-5 py-5">
  <h5>注文情報確認</h5>
  <div class="row mt-3">
    <div class="col-md-7">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.image, size: "60x50" %></td>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.tax_included_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.sum_of_price.to_s(:delimited) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 offset-md-1">
      <table class="table table-bordered">
        <tr>
          <th>送料</th>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= current_customer.cart_items_total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td><%= @order.payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">支払方法</div>
    <div class="col-md-10"><%= @order.payment_method_i18n %></div>
  </div>
  <div class="row">
    <div class="col-md-2">お届け先</div>
    <div class="col-md-10">〒<%= @order.post_code %><%= @order.address %><br><%= @order.name %></div>
  </div>
  <div class="row">
    <div class="col-md-5"></div>
    <div class="col-md-5">
    <%= form_with model:@order,url: orders_path,method: :post, local:true do |f|%>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :post_code %>
      <%= f.hidden_field :payment %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :postage %>
      <%= f.submit "注文を確定する" ,class:"btn btn-info btn-lg" %>
    <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
 </div>
</div>