<h3>注文情報確認</h3>

   <th>商品名</th>
   <th>単価(税込)</th>
   <th>数量</th>
   <th>小計</th>
   
  <% @cart_items.each do |cart_item| %>
    <%= image_tag cart_item.item.image, size: "60x50" %>
    <%= cart_item.item.name %>
    <%= cart_item.item.tax_included_price.to_s(:delimited) %>
    <%= cart_item.amount %>
    <%= cart_item.sum_of_price.to_s(:delimited) %>
  <% end %>
    
  <p>送料</p>
  <%= @order.postage.to_s(:delimited) %>
  <p>商品合計</p>
  <%= current_customer.cart_items_total_price.to_s(:delimited) %>
  <p>請求金額</p>
  <%= @order.payment.to_s(:delimited) %>
  <p>支払方法</p>
  <%= @order.payment_method_i18n %>
  <p>お届け先</p>
  <p>〒<%= @order.post_code %><%= @order.address %><br><%= @order.name %></p>

   <%= form_with model:@order,url: orders_path,method: :post, local:true do |f|%>
    <%= f.hidden_field :name, value: @order.name %>
    <%= f.hidden_field :address, value: @order.address %>
    <%= f.hidden_field :post_code, value: @order.post_code %>
    <%= f.hidden_field :payment, value: @order.payment %>
    <%= f.hidden_field :payment_method, value: @order.payment_method %>
    <%= f.hidden_field :postage, value: @order.postage %>
    <%= f.submit "注文を確定する" ,class:"btn btn-info btn-lg" %>
  <% end %>