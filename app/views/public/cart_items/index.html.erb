<h3>カート</h3>
  <%= link_to "カートを空にする",cart_items_path ,method: :delete %>

<% if @cart_items.empty? %>
  <p>商品を追加してください<p>
<% else %>
  <th>商品名</th>
  <th>単価（税込）</th>
  <th>数量</th>
  <th>小計</th>
  <th></th>
      
<% @cart_items.each do |cart| %>
  <%= image_tag cart.item.image, size: "100x80" %>
  <%= "　#{cart.item.name}" %>
            
  <%= cart.item.tax_included_price.to_s(:delimited) %></td>
            
  <%= form_with model: cart, remote: true do |f| %>
    <%= f.hidden_field :item_id, value: cart.item_id %>
              
    <%= f.select :amount, options_for_select(1..10, {selected: cart.amount} ) %>
    <%= f.submit "変更" %>
  <% end %>
          
  <%= cart.sum_of_price.to_s(:delimited) %>
  <%= link_to "削除",cart_item_path(cart.id), method: :delete %>
<% end %>
    

<% end %>


<%= link_to "買い物を続ける",root_path %>

<p>合計金額</p>

<%= @total_price.to_s(:delimited) %>

<%= link_to "情報入力に進む",new_order_path  %>