<div class="container-fluid">
  <div class="row"><div class="col-md-12" style="height: 50px;"></div></div>
  <div class="row pb-3">
    <div class="col-md-1"></div>
    <div class="col-md-8"><h4>ショッピングカート</h4></div>
    <div class="col-md-2">
    <%= link_to "カートを空にする",cart_items_path ,method: :delete, class:'btn btn-danger btn-sm' %>
    </div>
  </div>
  <% if @cart_items.empty? %>
    <p>商品を追加してください<p>
  <% else %>
  <div class="row pb-3">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead class="thead-light">
          <th></th>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <% @cart_items.each do |cart| %>
        <tbody>
          <tr>
            <td><%= image_tag cart.item.image, size: "100x80" %></td>
            <td><%= "　#{cart.item.name}" %></td>
            <td><%= cart.item.tax_included_price.to_s(:delimited) %></td>
            <td class="text-center">
                <%= form_with model: cart, remote: true do |f| %>
                <%= f.hidden_field :item_id, value: cart.item_id %>
                <%= f.select :amount, options_for_select(1..10, {selected: cart.amount} ) %>
                <%= f.submit "変更", class:'btn btn-success btn-sm' %>
                <% end %>
            </td>
            <td><%= cart.sum_of_price.to_s(:delimited) %></td>
            <td><%= link_to "削除",cart_item_path(cart.id), method: :delete, class:'btn btn-danger btn-sm' %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-md-1"></div>
  <% end %>
  </div>
  <div class="row pb-5">
    <div class="col-md-1"></div>
    <div class="col-md-7"><%= link_to "買い物を続ける",root_path, class:'btn btn-primary' %></div>
    <div class="col-md-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>合計金額</td>
            <td><%= @total_price.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <% unless @cart_items.empty? %>
  <div class="row">
    <div class="col-md-5"></div>
    <div class="col-md-2"><%= link_to "情報入力に進む",new_order_path, class:'btn btn-success' %></div>
    <div class="col-md-5"></div>
  </div>
  <% end %>
</div>
