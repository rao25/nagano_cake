<h3><%= @customer.full_name_no_blanks %>さんの会員情報編集</h3>

<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
    <p>会員ID</p>
    <%= @customer.id %>

    <%= f.label :氏名 %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>

    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>

    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>

    <%= f.label :住所 %>
    <%= f.text_field :address %>
    
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %>

    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>

    <%= f.label :会員ステータス %>
      <%= f.radio_button :is_active,false,checked:true %>
      <%= f.label :有効 %>
      <%= f.radio_button :is_active,true %>
      <%= f.label :退会 %>

    <%= f.submit "変更を保存", class: "btn btn-success" %>
    
<% end %>