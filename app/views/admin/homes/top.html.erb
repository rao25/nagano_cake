<div class="container">
  <div class="row mt-5">
    <div class="col-md-2"></div>
    <div class="col-md-10">注文履歴一覧</div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <table class="table">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
      　</tr>
　　　　<% @orders.each do |order| %>
　　　　<tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td> 
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_details.sum(:quantity) %></td><!-- 特定カラムの合計値 -->
          <td><%= order.status_i18n %></td><!-- 注文ステータスの日本語化 -->
        </tr>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
