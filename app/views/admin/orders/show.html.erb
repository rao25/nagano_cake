<div class="container px-5 py-5">
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-10"><h4>注文履歴詳細</h4></div>
    <div class="col-md-1"></div>
  </div>
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-11">
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td><%= link_to @order.customer.full_name, admin_customer_path(@order.customer) %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒 <%= @order.post_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= form_with model:[:admin, @order], local: true do |f| %>
            <%= f.collection_select(:status, Order.statuses_i18n, :first, :last, {selected: @order.status}) %>
            <%= f.submit "更新", class:"btn btn-success ml-3" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th
          </tr>
        </thead>
        <tbody>
        <% @order.order_details.each do |order_details| %>
          <tr>
            <td><%= order_details.item.name %></td>
            <td><%= order_details.tax_included_price %></td>
            <td><%= order_details.quantity %></td>
            <td><%= order_details.sum_of_price %></td>
            <%= form_with model:[:admin, order_details], local: true do |f| %>
            <td><%= f.collection_select(:making_status, OrderDetail.making_statuses_i18n, :first, :last,  { selected: order_details.making_status })%></td>
            <td><%= f.submit "更新",  class:"btn btn-success" %></td>
            <% end %>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <table class="table table-borderless">
        <tr>
          <th>商品合計</th>
          <td><%= @order.order_items_payment %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.order_items_payment + @order.postage %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
