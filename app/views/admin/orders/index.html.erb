<div class="container px-5 py-5">
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-10"><h4>注文履歴一覧</h4></div>
    <div class="col-md-1"></div>
  </div>
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-11">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
            <td><%= order.customer.full_name %></td>
            <td><%= order.order_details.sum(:quantity) %></td><!-- 特定カラムの合計値 -->
            <td><%= order.status_i18n %></td><!-- 注文ステータスの日本語化 -->
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>