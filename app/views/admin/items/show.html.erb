<div class="container px-5 py-5">
  <div class="row mb-3">
    <div class="col-md-1"></div>
    <div class="col-md-10"><h4>商品詳細</h4></div>
    <div class="col-md-1"></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
        <div class="img_field">
          <%= image_tag @item.image, size: "200x200" %>
        </div>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-3">
          <p>商品名</p>
        </div>
        <div class="col-md-5">
          <%= @item.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>商品説明</p>
        </div>
        <div class="col-md-5">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>ジャンル</p>
        </div>
        <div class="col-md-5">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>税込価格(税抜価格)</p>
        </div>
        <div class="col-md-5">
          <%= @item.price %>(<%= (@item.price * 1.1).floor %>)円
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>販売ステータス</p>
        </div>
        <div class="col-md-5">
          <% if @item.is_active? %>
          <p class="text-success">販売中</p>
          <% else %>
          <s class="text-secondary">販売停止中</s>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 text-center mt-4">
    <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success" %>
    </div>
  </div>
  
</div>
