 <h2>商品新規登録画面</h2>
 
  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
   
    <%= f.label :商品画像 %>
    <%= f.file_field :image, accept: "image/*" %>
    <%= f.hidden_field :image_id %>
    <%= f.label :商品名 %>
    <%= f.text_field :name, placeholder: "商品名" %>

    <%= f.label :商品説明 %>
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>

    <%= f.label :ジャンル %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {include_blank: "--選択してください--"}) %>
    
     
     <%= f.label :税抜価格 %>
     <%= f.text_field :price, placeholder: "1000" %>
     <p>円</p>

    
     <%= f.label :販売ステータス %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中" %>
    
     <%= f.submit "新規登録" %>
  
  <% end %>